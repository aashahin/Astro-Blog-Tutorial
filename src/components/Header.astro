---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
  <nav>
    <Hamburger />
    <ThemeIcon class="theme-icon" />
    <Navigation />
  </nav>
</header>

<style>
  nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  nav a {
    color: white !important;
  }

  .theme-icon {
    margin-left: 1rem;
  }